pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/jlucasguedes/SistemaVoos.git'
            }
        }

        stage('Unit Tests') {
            steps {
                bat 'mvn test'
                junit '**/target/surefire-reports/**.xml'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Performance Tests') {
            steps {
                bat 'jmeter -n -t jmeter/planodeteste.xml -l results.jtl'
                perfReport 'results.jtl'
            }
        }


        stage('Static Code Analysis') {
            environment {
                SONAR_TOKEN = credentials('squ_e2f7481a73ff9c329f86bcc40e9a4b6f1e56bcf7')
            }
            steps {
                withSonarQubeEnv('SonarQube') {
                   bat "mvn sonar:sonar -Dsonar.login=${env.SONAR_TOKEN}"
                }
            }
        }
        
    }
}