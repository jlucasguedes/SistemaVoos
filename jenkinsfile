pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/jlucasguedes/SistemaVoos.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'mvn test'
                junit '**/target/surefire-reports/**.xml'
            }
        }
    }
}